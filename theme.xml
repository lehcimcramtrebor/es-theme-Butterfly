<logoSize verticalScreen="true">0.65 0.14</logoSize>
<maxLogoCount verticalScreen="true">7</maxLogoCount>
</carousel>

<!-- Carousel animations -->
<control name="logo,logoText">
<storyboard event="activate">
<animation property="scale"				from="0.4"			to="1"									duration="125" 			mode="linear"							/>
<animation property="opacity"								to="0"				begin="550" 		duration="200" 			mode="easeIn"							/>
<animation property="opacity"			from="1"			to="1"									duration="1" 			mode="linear"/>
</storyboard>
<storyboard event="scroll">
<animation property="scale" 			from="0.4" 			to="0.4" 								duration="1" 			mode="linear"							/>
<animation property="opacity" 			from="1" 			to="1" 									duration="550" 			mode="linear"							/>
<animation property="opacity" 			from="1" 			to="0" 				begin="550" 		duration="200" 			mode="easeIn"							/>
<animation property="scale" 								to="0.3" 			begin="550" 		duration="200" 			mode="easeIn"							/>
</storyboard>
<storyboard event="deactivate">
<animation property="scale" 			from="1" 			to="0.4" 								duration="125" 			mode="linear"							/>
<animation property="opacity" 			from="1" 			to="1" 									duration="550" 			mode="linear"							/>
<animation property="opacity" 			from="1" 			to="0" 				begin="550" 		duration="200" 			mode="easeIn"							/>
<animation property="scale" 								to="0.3" 			begin="550" 		duration="200" 			mode="easeIn"							/>
</storyboard>

<storyboard event="activate" ifSubset="carousel:wheel">
<animation property="scale"				from="0.6"			to="1"									duration="125" 			mode="easeInOut"						/>
<animation property="offsetX"								to="0.1"			begin="550" 		duration="400" 			mode="easeInOut"						/>
<animation property="opacity"								to="0"				begin="550" 		duration="200" 			mode="easeIn"							/>
<animation property="opacity"			from="1"			to="1"									duration="1" 			mode="linear"/>
</storyboard>
<storyboard event="scroll" ifSubset="carousel:wheel">
<animation property="scale" 			from="0.6" 			to="0.6" 								duration="1" 			mode="linear"							/>
<animation property="opacity" 			from="0.75" 		to="0.75" 								duration="1" 			mode="linear"							/>
<animation property="opacity" 			from="0.75" 		to="0" 				begin="550" 		duration="200" 			mode="easeIn"							/>
<animation property="offsetX" 								to="1" 				begin="550" 		duration="400" 			mode="easeIn"							/>
</storyboard>
<storyboard event="deactivate" ifSubset="carousel:wheel">
<animation property="scale" 			from="1" 			to="0.6" 								duration="125" 			mode="easeInOut"						/>
<animation property="opacity" 			from="0.75" 		to="0.75" 								duration="1" 			mode="linear"							/>
<animation property="opacity" 			from="0.75" 		to="0" 				begin="550" 		duration="200" 			mode="easeIn"							/>
<animation property="offsetX" 								to="1" 				begin="550" 		duration="400" 			mode="easeIn"							/>
</storyboard>

<storyboard event="activate" ifSubset="carousel:vertical">
<animation property="scale"				from="0.5"			to="1"									duration="125" 			mode="linear"							/>
<animation property="opacity"								to="0"				begin="550" 		duration="200" 			mode="easeIn"							/>
<animation property="opacity"			from="0.5"			to="1"									duration="1" 			mode="linear"/>
</storyboard>
<storyboard event="scroll" ifSubset="carousel:vertical">
<animation property="scale" 			from="0.5" 			to="0.5" 								duration="1" 			mode="linear"							/>
<animation property="opacity" 			from="0.9" 			to="0.9" 								duration="1" 			mode="linear"							/>
<animation property="opacity" 			from="0.9" 			to="0" 				begin="550" 		duration="200" 			mode="easeIn"							/>
<animation property="scale" 								to="0.3" 			begin="550" 		duration="200" 			mode="easeIn"							/>
</storyboard>
<storyboard event="deactivate" ifSubset="carousel:vertical">
<animation property="scale" 			from="1" 			to="0.5"								duration="125" 			mode="linear"							/>
<animation property="opacity" 			from="0.9" 			to="0.9" 								duration="1" 			mode="linear"							/>
<animation property="opacity" 			from="0.9" 			to="0" 				begin="550" 		duration="200" 			mode="easeIn"							/>
<animation property="scale" 								to="0.3" 			begin="550" 		duration="200" 			mode="easeIn"							/>
</storyboard>
</control>

<!-- System videos -->
<video name="sVideo" extra="true" linearSmooth="true" zIndex="800" origin="${v.rvOrigin}" pos="${v.rvPos}" maxSize="${v.rvSize}" roundCorners="0.022" effect="none"
default="./resources/parts/default_${v.color}.mp4"
path="{random}"
path="./${system.theme}/video.mp4"
path="./${v.custom}/${system.theme}/video.mp4"
>
<shader if="{screen.height} >= '480'" path=":/shaders/helmic_${v.color}.glsl"/>
<storyboard>
<animation property="offsetX"			from="1"			to="1"									duration="650" 		mode="linear"							/>
<animation property="offsetX"								to="0"				begin="550"			duration="400" 		mode="easeInOut"						/>
</storyboard>
<storyboard ifSubset="randomVideos:bl">
<animation property="offsetX"			from="-1"			to="-1"									duration="650" 		mode="linear"							/>
<animation property="offsetX"								to="0"				begin="550"			duration="400" 		mode="easeInOut"						/>
</storyboard>
<audio>true</audio>
</video>

</view>


