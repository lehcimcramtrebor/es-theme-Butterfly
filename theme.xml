<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<!-- Custom infos -->
<include>./${v.custom}/${system.theme}/theme.xml</include>

<!---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
<!-- VARIABLES --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->
<!---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->

<variables>

<!-- Region priority -->
<v.region region="eu">region</v.region>
<v.allViews>basic,detailed,grid,gamecarousel</v.allViews>

<!-- Customs path -->
<v.custom>../../_ButterflyCustom</v.custom>
<v.custom ifArch="windows">../../../../_ButterflyCustom</v.custom>

<!-- Screen ratio conditions to variables -->
<v.notWide>${screen.height} > ${screen.width}/1.6</v.notWide>
<v.ultraWide>${screen.width} > ${screen.height}*1.8</v.ultraWide>

<v.329>{screen.ratio} == '32/9'</v.329>
<v.219>{screen.ratio} == '21/9'</v.219>
<v.161>{screen.ratio} == '16/10'</v.161>
<v.169>{screen.ratio} == '16/9'</v.169>
<v.54>{screen.ratio} == '5/4'</v.54>
<v.43>{screen.ratio} == '4/3'</v.43>
<v.32>{screen.ratio} == '3/2'</v.32>
<v.11>{screen.ratio} == '1/1'</v.11>

<!-- General language -->
<lang.yes>yes</lang.yes>
<lang.yes lang="fr">oui</lang.yes>

<lang.no>no</lang.no>
<lang.no lang="fr">non</lang.no>

<!-- System Infos EX -->
<lang.elements>elements</lang.elements>
<lang.elements lang="fr">éléments</lang.elements>

<lang.tables>tables</lang.tables>
<lang.tables lang="fr">tables</lang.tables>

<lang.games>games</lang.games>
<lang.games lang="fr">jeux</lang.games>

<lang.favorites>favorites</lang.favorites>
<lang.favorites lang="fr">favoris</lang.favorites>

<v.p1 if="{system.releaseYearOrNull} >= '1958'">(</v.p1>
<v.p2 if="{system.releaseYearOrNull} >= '1958'">)</v.p2>

<v.bindingTotalUL>${lang.elements}: {binding:total}</v.bindingTotalUL>

<v.bindingFavorites if="{system.theme} != 'auto-favorites'">( {binding:favorites} ${lang.favorites} )</v.bindingFavorites>

</variables>

